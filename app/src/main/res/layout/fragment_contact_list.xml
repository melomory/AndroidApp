<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    tools:context=".ContactListFragment">

    <ImageView
        android:id="@+id/contactImage"
        android:layout_width="@dimen/contact_list_avatar_width"
        android:layout_height="@dimen/contact_list_avatar_height"
        android:layout_marginStart="@dimen/contact_list_avatar_margin_start"
        android:layout_marginTop="@dimen/contact_list_avatar_margin_top"
        android:layout_marginBottom="@dimen/contact_list_avatar_margin_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/android_logo_icon"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/contactName"
        style="@style/nameTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_start"
        android:layout_marginTop="@dimen/contact_list_name_margin_top"
        android:text="@string/contact_list_name"
        app:layout_constraintStart_toEndOf="@+id/contactImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contactPhoneNumber"
        style="@style/otherTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_start"
        android:layout_marginTop="@dimen/contact_list_contact_phone_number_margin_top"
        android:text="@string/contact_list_phone_number"
        app:layout_constraintStart_toEndOf="@+id/contactImage"
        app:layout_constraintTop_toBottomOf="@+id/contactName" />

</androidx.constraintlayout.widget.ConstraintLayout>